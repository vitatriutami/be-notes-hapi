{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "script" // Add this to indicate CommonJS
  },
  "rules": {
    "no-console": "off",
    "linebreak-style": ["error", "windows"],
    "no-underscore-dangle": [
      "error",
      { "allow": ["_service", "_notes", "_validator"] }
    ]
  }
}

